<%= form_tag "/client/products/#{@product["id"]}", method: :patch do %>

  <div>
    Name: <input type="text" name="name" value="<%= @product["name"] %>">
  </div>
  <div>
    Description: <input type="text" name="description" value="<%= @product["description"] %>">
  </div>
  <div>
    Attunement: <input type="text" name="attunement" value="<%= @product["attunement"] %>">
  </div>
  <div>
    Rarity: <input type="text" name="rarity" value="<%= @product["rarity"] %>">
  </div>
  <div>
    Supplier: <input type="text" name="supplier_id" value="<%= @product["supplier_id"] %>">
  </div>

  <input type="submit" value="Update Recipe">
<% end %>